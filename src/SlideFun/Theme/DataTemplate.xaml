<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:SlideFun.MVVM.Views.Pages"
    xmlns:viewmodel="clr-namespace:SlideFun.MVVM.ViewModels">


    <DataTemplate DataType="{x:Type viewmodel:MainMenuViewModel}">
        <view:MainMenu />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:UserEnterNameViewModel}">
        <view:UserNameEnter />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:GameRoundViewModel}">
        <view:GameRound />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:GalleryViewModel}">
        <view:Gallery />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:LeaderBoardViewModel}">
        <view:Leaderboard />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:LevelSelectionViewModel}">
        <view:LevelSelection />
    </DataTemplate>

</ResourceDictionary>