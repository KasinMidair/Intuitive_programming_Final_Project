<Window x:Class="PuzzleGame.MVVM.Views.Play_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuzzleGame"
        xmlns:pge="clr-namespace:PuzzleGame.MVVM.Views.Pages"
        xmlns:viewmodel="clr-namespace:PuzzleGame.MVVM.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/xaml/behaviors" d:DataContext="{d:DesignInstance Type=viewmodel:PlayViewModel}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Play_Window" Height="600" Width="920"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        x:Name="wnd" 
        Background= "Transparent"
        DataContext="{StaticResource MainDataContext}">


    <Grid Margin="0,0,0,0">
        
        <!--Declaring triggers in the interactivity to create ability to move wnd-->
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseDown">
                <i:InvokeCommandAction Command="{Binding Source={StaticResource MainDataContext},  Path = MoveWndCommand}"
                                  CommandParameter="{Binding ElementName=wnd}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!--Window border-->
        <Border Background="#212228" CornerRadius="15"  />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <!--<Grid>
                -->
            <!--Base Grid-->
            <!--
                <Canvas x:Name="pnlcontainer" Margin="241,38,276,38" Grid.Column="1">
                    <Canvas x:Name="pnlGamePlaySpace" Width="360" Height="360" Canvas.Left="10" Canvas.Top="10" 
                            HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.495,0.495">
                    </Canvas>
                </Canvas>
            
            </Grid>-->


            <!--Loading pages in frame-->
            <Frame x:Name="MainFrame" Grid.RowSpan="2" Width="920" Height="600"
                   NavigationUIVisibility="Hidden"/>


            <!--Setting panel-->
            <Border   Background="#F5C7A4" x:Name="SettingMenu" Margin="133,73,133,102" Grid.RowSpan="2">

                <!--Pannel animation-->
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSettingVisible}" Value="False">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="SlideDownStoryboard" Storyboard="{StaticResource SlideDownAnimation}"/>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard x:Name="SlideUpStoryboard" Storyboard="{StaticResource SlideUpAnimation}"/>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Border.RenderTransform>
                    <TranslateTransform Y="-1000"/>
                </Border.RenderTransform>

                <Border.Effect>
                    <DropShadowEffect Color="LightGoldenrodYellow" BlurRadius="15" Opacity="0.4" ShadowDepth="5" Direction="225"/>
                </Border.Effect>

                <StackPanel  HorizontalAlignment="Center">
                    <TextBlock x:Name="TB_Settings" TextWrapping="Wrap" Text="Settings" FontSize="32" HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Imgs/Sprite-0001.png" Width="64" Height="64" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Vertical" Margin="5, 0, 0, 0">
                            <TextBlock x:Name="TB_Username" TextWrapping="Wrap" Text="User" FontSize="24" 
                                       FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="TB_UserID" TextWrapping="Wrap" Text="(ID string)" FontSize="24" 
                                           FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>
                                <Button x:Name="BTN_Copy" Width="75" Margin="10, 0, 0, 0"
                                        FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        ToolTip="Resource name: MaterialDesignRaisedButton" 
                                        Content="Copy" FontSize="20" Background="#9cb898" BorderBrush="#9cb898" Height="35"
                                        materialDesign:ButtonAssist.CornerRadius="25" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="SP_Music" Margin="0, 10, 0, 0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="TB_Music" TextWrapping="Wrap" Text="Music" FontSize="24" 
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>
                        <Slider x:Name="SLIDER_Music" Maximum="{Binding DiscreteHorizontal.Maximum}" Minimum="0"
                                FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                                Style="{StaticResource MaterialDesignDiscreteSlider}" 
                                TickFrequency="{Binding DiscreteHorizontal.TickFrequency}"
                                TickPlacement="BottomRight" Value="4" Margin="5, 0, 0, 0" Width="400" Height="30" Foreground="#f14666">
                        </Slider>
                    </StackPanel>
                    <StackPanel x:Name="SP_SFX" Margin="0, 10, 0, 0" Orientation="Horizontal">
                        <TextBlock x:Name="TB_SFX" TextWrapping="Wrap" Text="SFX" FontSize="24"
                                   FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>
                        <Slider x:Name="SLIDER_SFX" Maximum="{Binding DiscreteHorizontal.Maximum}" Minimum="0" 
                                FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                                Style="{StaticResource MaterialDesignDiscreteSlider}" 
                                TickFrequency="{Binding DiscreteHorizontal.TickFrequency}"
                                TickPlacement="BottomRight" Value="4" Margin="5, 0, 0, 0" Width="400" Height="30" Foreground="#f14666">
                        </Slider>
                    </StackPanel>
                    
                    <Button x:Name="BTN_MainMenu" Width="150" Margin="0, 10, 0, 0"
                            FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Resource name: MaterialDesignRaisedButton" 
                            Content="Main Menu" FontSize="24" Background="#9cb898" BorderBrush="#9cb898" Height="40"
                            materialDesign:ButtonAssist.CornerRadius="25" VerticalAlignment="Center"/>
                    <Button x:Name="BTN_Continue" Width="150" Margin="0, 10, 0, 0"
                            FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Resource name: MaterialDesignRaisedButton" 
                            Content="Continue" FontSize="24" Background="#9cb898" BorderBrush="#9cb898" Height="40"
                            materialDesign:ButtonAssist.CornerRadius="25" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>



            <!--ToolBar-->
            <Border x:Name="ToolBar" Background="Transparent"
                    CornerRadius="20" Margin="802,50,18,350" Grid.RowSpan="2">

                <Border.RenderTransform>
                    <TranslateTransform X="80"/>
                </Border.RenderTransform>
                
                <!--Toolbar sliding anim-->
                <Border.Style>
                    <Style TargetType="Border" >
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="SlideDownStoryboard" Storyboard="{StaticResource SlideLeftAnimation}"/>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard x:Name="SlideUpStoryboard" Storyboard="{StaticResource SlideRightAnimation}"/>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                
                <!--default buttons-->
                <Border Background="{Binding ToolBarColor}"
                    CornerRadius="15" Margin="25,0,35,0">

                    <Canvas Margin="12,0,-12,0" >
                        <Button x:Name="ShutdownBTN" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                                Command="{Binding ShutdownCommand}" Padding="0"
                                CommandParameter="{Binding ElementName=ShutdownBTN}" Canvas.Top="25" Width="34"
                                BorderThickness="0" Height="35"
                                Style="{StaticResource ResourceKey=BTN}" Canvas.Left="-9">

                            <Button.Background>
                                <ImageBrush ImageSource="/Assets/Imgs/Shutdown_BTN.png"></ImageBrush>
                            </Button.Background>
                        </Button>
                        <Button VerticalAlignment="Top" Command="{Binding SettingCommand}" 
                                CommandParameter="{Binding ElementName=SettingMenu}" Canvas.Top="71" HorizontalAlignment="Center" 
                               BorderThickness="0" 
                                Height="32" Width="28"
                                Style="{StaticResource ResourceKey=BTN}" Canvas.Left="-6">

                            <Button.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Imgs/Setting_BTN.png"></ImageBrush>
                            </Button.Background>
                        </Button>

                    </Canvas>

                </Border>

            </Border>

            <!--Back button-->
            <Button  Grid.Row="0" Margin="45,40,0,15" Style="{StaticResource ResourceKey=BTN}" 
                        Width="95" HorizontalAlignment="Left"  x:Name="BackBTN"
                        Command="{Binding Source={StaticResource MainDataContext}, Path=GoBackCommand}"
                        CommandParameter="{Binding ElementName=ExitBTN}"
                        Visibility="{Binding ElementName=MainFrame, Path=CanGoBack, Converter={StaticResource IsVisible}}">

                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Assets/Imgs/Back_BTN.png"></ImageBrush>
                </Button.Background>

                <Button.Effect>
                    <DropShadowEffect Color="#D46F6A" BlurRadius="15" Opacity="0.4" 
                                      ShadowDepth="4" Direction="-45"/>
                </Button.Effect>

            </Button>

        </Grid>
    </Grid>
</Window>
