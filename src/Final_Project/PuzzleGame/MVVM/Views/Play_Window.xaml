<Window x:Class="PuzzleGame.MVVM.Views.Play_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuzzleGame"
        xmlns:pge="clr-namespace:PuzzleGame.MVVM.Views.Pages"
        xmlns:viewmodel="clr-namespace:PuzzleGame.MVVM.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" d:DataContext="{d:DesignInstance Type=viewmodel:PlayViewModel}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Play_Window" Height="600" Width="920"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        x:Name="wnd"
        Background= "Transparent"
        DataContext="{StaticResource MainDataContext}">

    <Grid Margin="0,0,0,0">

        <!--Window border-->
        <Border Background="#212228" CornerRadius="10"  />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Button x:Name="demo" Command="{Binding StartCommand}" CommandParameter="demo"></Button>

            <!--<Grid>
                -->
            <!--Base Grid-->
            <!--
                <Canvas x:Name="pnlcontainer" Margin="241,38,276,38" Grid.Column="1">
                    <Canvas x:Name="pnlGamePlaySpace" Width="360" Height="360" Canvas.Left="10" Canvas.Top="10" 
                            HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.495,0.495">
                    </Canvas>
                </Canvas>
            
            </Grid>-->


            <Frame Grid.RowSpan="2" Width="920" Height="600" NavigationUIVisibility="Hidden"
                  Content="{Binding CurrentPage,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>

            <Border   Background="#F5C7A4" x:Name="SettingMenu" Margin="160,82,160,94" Grid.Row="1">
                <Border.Style>

                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSettingVisible}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="SlideDownStoryboard" Storyboard="{StaticResource SlideDownAnimation}"/>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard x:Name="SlideUpStoryboard" Storyboard="{StaticResource SlideUpAnimation}"/>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Border.RenderTransform>
                    <TranslateTransform Y="-1000"/>
                </Border.RenderTransform>

                <Border.Effect>
                    <DropShadowEffect Color="LightGoldenrodYellow" BlurRadius="15" Opacity="0.4" ShadowDepth="5" Direction="225"/>
                </Border.Effect>

                <Canvas >

                    <TextBlock Foreground="#15161C" FontSize="24" Canvas.Left="160.908" Canvas.Top="130"
                               Height="29" Width="274" FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                               FontWeight="SemiBold" >
                        ENTER YOUR USER NAME
                    </TextBlock>


                    <Border Background="Snow" CornerRadius="25" Width="388" Height="55" 
                            Canvas.Left="106" Canvas.Top="195" HorizontalAlignment="Center" 
                            RenderTransformOrigin="0.5,0.595">
                        <Grid Margin="0,-3,30,3">
                            <TextBox  VerticalAlignment="Center" FontSize="16px" materialDesign:HintAssist.Hint="UserName" Foreground="#15161C"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="75"  Margin="18,0,9,0" RenderTransformOrigin="0.512,0.706" Text=""  />

                            <Grid Margin="233,1,-20,-1">
                                <Button materialDesign:ButtonAssist.CornerRadius="15" 
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                 FocusVisualStyle="{x:Null}" Margin="72,12,0,10">
                                    <TextBlock Text="Enter" />
                                </Button>
                            </Grid>

                        </Grid>
                    </Border>

                </Canvas>
            </Border>
            <Button Grid.Row="1" Margin="40,80,805,438" VerticalAlignment="Center"
                    Command="{Binding SettingCommand}" CommandParameter="{Binding ElementName=SettingMenu}"/>
        </Grid>
    </Grid>
</Window>
