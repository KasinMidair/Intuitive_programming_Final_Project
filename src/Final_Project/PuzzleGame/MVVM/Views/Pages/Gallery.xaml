<Page x:Class="PuzzleGame.MVVM.Views.Pages.Gallery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame.MVVM.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gallery">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="560"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Name="BackBTN"
            Grid.Column="1" Grid.Row="3"
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="/BUTTON/Start_BTN.png"></ImageBrush>
            </Button.Background>

        </Button>

        <Button Name="DeleteBTN" Content="Delete"
            Grid.Column="3" Grid.Row="3">
        </Button>

        <Button Name="AddBTN" Content="Add"
            Grid.Column="5" Grid.Row="3">
        </Button>

        <Image Name="ImageHolder"
           Grid.Column="7" Grid.Row="1" Grid.RowSpan="2">
        </Image>

        <DataGrid Name="ImageList"
              Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1">
        </DataGrid>
    </Grid>
</Page>
