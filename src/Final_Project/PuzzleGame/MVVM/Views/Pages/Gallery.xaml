<Page x:Class="PuzzleGame.MVVM.Views.Pages.Gallery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame.MVVM.Views.Pages"
      xmlns:ViewModels="clr-namespace:PuzzleGame.MVVM.ViewModels" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="Gallery">

    <Page.DataContext>
        <ViewModels:GalleryViewModel/>
    </Page.DataContext>


    <Grid Background="#F5C7A4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="560"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Back button-->
        <Button x:Name="BackBTN"
            Grid.Column="1" Grid.Row="3"
                BorderBrush="Transparent" Margin="0,0,0,18" Grid.RowSpan="2"/>

        <!--Delete Button-->
        <Button x:Name="DeleteBTN" Content="Delete"
            Grid.Column="3" Grid.Row="3"
            Command="{Binding DeleteImageCommand, Source={StaticResource MainDataContext}}"
            CommandParameter="{Binding ElementName=DeleteBTN}" Margin="0,0,0,18" Grid.RowSpan="2"/>

        <!--Add Button-->
        <Button x:Name="AddBTN" Content="Add"
            Grid.Column="5" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,0,0,18" Grid.RowSpan="2"/>

        <!--Image holder-->
        <Image x:Name="ImageHolder"
           Grid.Column="9" Grid.Row="1" Grid.RowSpan="3"
               Source="\Assets\picture\pic1.jpg"/>

        <!--Picture list-->
        <ListView x:Name="PictureList"
              Grid.Column="1" Grid.ColumnSpan="7" Grid.Row="1"
              ItemsSource="{Binding PictureList}">
            <ListView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Border Background="Transparent">
                        <TextBlock Text="{Binding Name}"   
                               FontSize="30" Foreground="#15161C"></TextBlock>
                    </Border>
                </Grid>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
