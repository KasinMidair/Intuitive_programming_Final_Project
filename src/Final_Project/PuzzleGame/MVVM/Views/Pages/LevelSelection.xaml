<Page x:Class="PuzzleGame.MVVM.Views.Pages.LevelSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame.MVVM.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="LevelSelection">






    <Grid Background="#FFCFAB">


        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="520"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="520"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>


        <!-- Image holder -->
        <Image Name="ImageHolder"
               Grid.Column="3" Grid.Row="1"
               Source="\Assets\picture\pic1.jpg"></Image>

        <!-- Number seclection combobox-->
        <ComboBox Name="NumberSelection_Combobox" 
                  Grid.Column="1" HorizontalAlignment="Center" Margin="0,126,0,0" Grid.Row="1" VerticalAlignment="Top" Width="260"
                  Background="Snow">
            <RadioButton Content="RadioButton"/>
        </ComboBox>

        <!-- Picture selection combobox-->
        <ComboBox Name="PictureSelection_Combobox" 
                  Grid.Column="1" HorizontalAlignment="Center" Margin="0,219,0,0" Grid.Row="1" VerticalAlignment="Top" Width="260"
                  Background="Snow">
        </ComboBox>

        <!-- Text block -->
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,91,0,0" Grid.Row="1"
                   TextWrapping="Wrap" VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Assets/Fonts/#Itim" 
                   Foreground="#15161C" FontSize="25" FontWeight="SemiBold">
            Number of pieces:
        </TextBlock>

        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,184,0,0" Grid.Row="1"
           TextWrapping="Wrap" VerticalAlignment="Top"
           FontFamily="pack://application:,,,/Assets/Fonts/#Itim" 
           Foreground="#15161C" FontSize="25" FontWeight="SemiBold">
            Picture name:
        </TextBlock>

        <!-- Play button -->
        <Button Name="Play_BTN" Grid.Column="1" Grid.Row="1" Margin="0,439,0,0"
                Background="#9DB899" Width="280" Height="50"
                Foreground="snow" FontSize="30" FontWeight="Black">
            Play
        </Button>

    </Grid>



</Page>
    
    
