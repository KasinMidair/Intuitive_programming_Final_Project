<Page x:Class="PuzzleGame.MVVM.Views.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame"
      xmlns:viewmodel="clr-namespace:PuzzleGame.MVVM.ViewModels"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewmodels="clr-namespace:PuzzleGame.MVVM.ViewModels"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="MainMenu"
      Background="Transparent">
    <StackPanel Margin="323,250,322,-10">
        <!--Style="{StaticResource ResourceKey=BTN}-->
        
        <!--Start button-->
        <Button Margin="15,15,15,5" Style="{StaticResource ResourceKey=BTN}" 
              Width="210"  Height="90" HorizontalAlignment="Center" x:Name="startBTN"
              Command="{Binding Source={StaticResource MainDataContext}, Path=StartCommand}" CommandParameter="startBTN" >
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/Imgs/Start_BTN.png"></ImageBrush>
            </Button.Background>
        </Button>

        <!--Achievement button-->
         <Button  Margin="10,10,10,5" Style="{StaticResource ResourceKey=BTN}" 
                 Width="210"  Height="90" HorizontalAlignment="Center"
                 Command="{Binding Source={StaticResource MainDataContext}, Path=ShowMSGBoxCommand}" x:Name="AchievementBTN"
                 CommandParameter="{Binding ElementName=AchievementBTN}">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/Imgs/Achievement_BTN.png"></ImageBrush>
            </Button.Background>
        </Button>
        
        
        <!--Exit button-->
       <Button  Margin="10,10,10,5" Style="{StaticResource ResourceKey=BTN}" 
                 Width="210"  Height="90" HorizontalAlignment="Center"
                 Command="{Binding Source={StaticResource MainDataContext}, Path=ShutdownCommand}" x:Name="ExitBTN"
                 CommandParameter="{Binding ElementName=ExitBTN}">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/Imgs/Exit_BTN.png"></ImageBrush>
            </Button.Background>
        </Button>
        


    </StackPanel>
</Page>
