<Page x:Class="PuzzleGame.MVVM.Views.Pages.UserNameEnter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame.MVVM.Views.Pages"
      xmlns:viewmodel="clr-namespace:PuzzleGame.MVVM.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Background="Transparent"
      Title="UserNameEnter"
      DataContext="{StaticResource MainDataContext}">

    <Canvas  Background="#F5C7A4" Width="920" Height="600">

        <TextBlock Foreground="#15161C" FontSize="32" Canvas.Left="254.5" Canvas.Top="220"
                   Height="50" Width="411" FontFamily="pack://application:,,,/Assets/Fonts/#Itim"
                   FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Top">
            ENTER YOUR USER NAME
        </TextBlock>


        <Border Background="Snow" CornerRadius="35" Width="560" Height="68" 
                Canvas.Left="180" Canvas.Top="306" HorizontalAlignment="Center" 
                VerticalAlignment="Top" RenderTransformOrigin="0.5,0.595">
            <Grid Margin="0,-3,30,3">
                <TextBox  VerticalAlignment="Center" FontSize="20" materialDesign:HintAssist.Hint="UserName" Foreground="#15161C"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="106"  Margin="18,0,0,0"
                                  RenderTransformOrigin="0.512,0.706" Text=""
                                  FontFamily="pack://application:,,,/Assets/Fonts/#Itim"/>

                <Grid >
                    <Button materialDesign:ButtonAssist.CornerRadius="25" 
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    FocusVisualStyle="{x:Null}"  Height="50" Margin="406,11,-21,7" >
                        <TextBlock Text="Enter" FontFamily="pack://application:,,,/Assets/Fonts/#Itim" FontSize="24" />
                    </Button>
                </Grid>

            </Grid>
        </Border>

    </Canvas>

</Page>
