<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  UpArrow  -->
    <KeyBinding
        x:Key="Up"
        Key="Up"
        Command="{Binding HandleKeyCommand}"
        CommandParameter="Up" />
    <!--  DowArrow  -->
    <KeyBinding
        x:Key="Down"
        Key="Down"
        Command="{Binding HandleKeyCommand}"
        CommandParameter="Down" />
    <!--  RightArrow  -->
    <KeyBinding
        x:Key="Right"
        Key="Right"
        Command="{Binding HandleKeyCommand}"
        CommandParameter="Right" />
    <!--  LeftArrow  -->
    <KeyBinding
        x:Key="Left"
        Key="Left"
        Command="{Binding HandleKeyCommand}"
        CommandParameter="Left" />

</ResourceDictionary>